{
  "name": "Test Extension",
  "version": "0.0",
  "description": "Just load and execute a WASM file on every page",
  "manifest_version": 2,

  "background": {
      "persistent": false,
      "scripts": [ "worker_proxy.js" ]
  },
  "content_scripts": [{
      "matches": [ "*://*/*" ],
      "js": [
          "via/receiver/receiver.js",
          "worker_proxy.js",
          "content-script.js"
      ]
  }],
  "web_accessible_resources": [ 
      "worker_proxy.html", 
      "pkg/lib_bg.wasm",
      "via/controller/object.js",
      "via/controller/property.js",
      "via/controller/controller.js"
    ]
}
